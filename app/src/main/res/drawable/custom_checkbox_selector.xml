<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Checked -->
    <item android:state_checked="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#00BD90"/> <!-- Green background -->
                    <stroke android:width="2dp" android:color="#000000"/> <!-- Black border -->
                    <corners android:radius="4dp"/>
                </shape>
            </item>
            <!-- Optional: add your own green checkmark drawable instead -->
        </layer-list>
    </item>

    <!-- Unchecked -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent"/>
            <stroke android:width="2dp" android:color="#000000"/> <!-- Black border -->
            <corners android:radius="4dp"/>
        </shape>
    </item>
</selector>

