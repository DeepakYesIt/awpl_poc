    <androidx.cardview.widget.CardView
        android:id="@+id/doctor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        app:cardCornerRadius="5dp">
        <LinearLayout
            android:id="@+id/lldoctor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
