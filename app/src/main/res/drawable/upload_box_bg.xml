<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- White Background -->
    <solid android:color="@android:color/white" />

    <!-- Dashed Border -->
    <stroke
        android:width="2dp"
        android:color="#199FD9"
        android:dashWidth="8dp"
        android:dashGap="4dp" />

    <!-- Rounded Corners -->
    <corners android:radius="15dp" />

    <!-- Padding Inside Box -->
    <padding
        android:left="12dp"
        android:top="12dp"
        android:right="12dp"
        android:bottom="12dp" />
</shape>
