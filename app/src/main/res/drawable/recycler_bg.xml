<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- White Background -->
    <solid android:color="@android:color/white" />

    <!-- Dashed Border -->
    <stroke
        android:width="2dp"
        android:color="@color/greyColor"
        android:dashWidth="8dp"
        android:dashGap="4dp" />

    <!-- Rounded Corners -->
    <corners android:radius="5dp" />

    <!-- Padding Inside Box -->
    <padding
        android:left="10dp"
        android:top="10dp"
        android:right="10dp"
        android:bottom="10dp" />
</shape>
