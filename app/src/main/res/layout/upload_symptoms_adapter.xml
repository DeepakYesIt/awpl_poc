<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/_7sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardCornerRadius="17dp"
        app:cardElevation="6dp"
        app:cardBackgroundColor="@android:color/white">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Main content layout -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp"
                android:layout_marginHorizontal="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_12sdp"
                android:layout_marginBottom="20dp">

                <!-- Appointment Date Title -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/upload_date"
                    android:textStyle="bold"
                    android:textSize="17sp"
                    android:fontFamily="@font/lato_regular"
                    android:textColor="#356598"/>
                    <TextView
                        android:id="@+id/tv_upload_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="  "
                        android:textStyle="bold"
                        android:textSize="17sp"

                        android:layout_marginStart="@dimen/_10sdp"
                        android:fontFamily="@font/lato_regular"
                        android:textColor="#363636"/>
                </LinearLayout>
                <!-- Date and Time -->


                <!-- Divider -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginVertical="8dp"
                    android:layout_marginTop="@dimen/_9sdp"
                    android:background="@color/greyColor"/>

                <!-- Doctor's Profile -->


                <!-- Reschedule Button -->
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/rescheduleButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:text="@string/download_prescription"
                    android:background="@drawable/sharp_btn_bg"
                    android:textAllCaps="false"
                    android:textSize="16sp"
                    android:fontFamily="@font/lato_regular"
                    android:textColor="@android:color/white" />

            </LinearLayout>

            <!-- Blue Color Strip at Bottom -->
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_18sdp"
                android:layout_gravity="bottom"
                android:background="@drawable/gradient_bg"/>
        </FrameLayout>
    </androidx.cardview.widget.CardView>


</RelativeLayout>