<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/parent_bg"
        android:paddingHorizontal="@dimen/_20sdp"
        android:paddingVertical="@dimen/_10sdp"

        tools:context=".fragment.scheduledcallconsultation.ScheduledCallConsultation">


        <LinearLayout
            android:id="@+id/linearLayout8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginHorizontal="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_15sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/forMe"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/forother_btn"
                android:fontFamily="@font/lato_regular"
                android:padding="@dimen/_10sdp"
                android:text="@string/for_me"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:gravity="center"
                android:layout_marginEnd="@dimen/_8sdp"/>

            <TextView
                android:id="@+id/forOthers"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/for_mr_bg"
                android:fontFamily="@font/lato_regular"
                android:padding="@dimen/_10sdp"
                android:text="@string/for_others"
                android:textColor="@color/darkGreyColor"
                android:textSize="18sp"
                android:gravity="center"
                android:layout_marginStart="@dimen/_8sdp"/>
        </LinearLayout>



        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lato_regular"
            android:layout_marginTop="@dimen/_15sdp"
            android:text="@string/lorem_1"
            android:textColor="@color/darkGreyColor"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout8" />

        <EditText
            android:id="@+id/ansNO1"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="#DAEFF9"
            android:hint="@string/answer"
            android:padding="@dimen/_10sdp"
            android:textColor="@color/greyColor"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView10" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lato_regular"
            android:text="@string/_2_lorem_ipsum_dolor_sit_amet_consectetur"
            android:textColor="@color/darkGreyColor"
            android:textSize="16sp"
            android:layout_marginTop="@dimen/_10sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ansNO1" />

        <EditText
            android:id="@+id/ansNo2"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="#DAEFF9"
            android:hint="@string/answer"
            android:padding="@dimen/_10sdp"
            android:textColor="@color/greyColor"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView11" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lato_regular"
            android:text="@string/_3_lorem_ipsum_dolor_sit_amet_consectetur"
            android:layout_marginTop="@dimen/_10sdp"
            android:textColor="@color/darkGreyColor"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ansNo2" />

        <EditText
            android:id="@+id/ansNo3"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="#DAEFF9"
            android:hint="@string/answer"
            android:padding="@dimen/_10sdp"
            android:textColor="@color/greyColor"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView12" />

        <TextView
            android:id="@+id/textView14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lato_regular"
            android:text="@string/_4_lorem_ipsum_dolor_sit_amet_consectetur"
            android:layout_marginTop="@dimen/_10sdp"
            android:textColor="@color/darkGreyColor"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ansNo3" />

        <EditText
            android:id="@+id/ans4"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="@dimen/_10sdp"
            android:autofillHints=""
            android:background="#DAEFF9"
            android:hint="@string/answer"
            android:padding="@dimen/_10sdp"
            android:textColor="@color/greyColor"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView14" />



        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="@dimen/_10sdp"
            android:orientation="horizontal"
            android:weightSum="3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ans4">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnImage"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawableStart="@drawable/image_icon"
                android:background="@drawable/icon_bg"
                android:text="@string/images"
                android:padding="@dimen/_8sdp"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:textColor="@color/darkGreyColor"
                android:layout_marginEnd="4dp"
                android:layout_marginStart="2dp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/viewImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/_10sdp"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout">

            <TextView
                android:id="@+id/textView20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:fontFamily="@font/lato_regular"
                android:text="Images"
                android:textColor="@color/darkGreyColor"
                android:textSize="16sp"/>


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/imageRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/recycler_bg"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:listitem="@layout/item_image" />

        </LinearLayout>


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnNext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_bg"
            android:padding="@dimen/_12sdp"
            android:fontFamily="@font/lato_regular"
            android:text="@string/schedule_a_call"
            android:layout_marginTop="@dimen/_15sdp"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/viewImage" />



    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>


