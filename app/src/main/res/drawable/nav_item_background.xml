<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Normal background (transparent or as per your need) -->
    <item> <color android:color="@android:color/white" /> </item>
    <!-- Bottom indicator line -->
    <item android:height="6dp"
    android:gravity="bottom">
    <shape android:shape="rectangle">
        <solid android:color="@color/blueColor" />
        <corners android:bottomLeftRadius="@dimen/_15sdp"
            android:bottomRightRadius="@dimen/_15sdp"/>
    </shape>
    </item>
    <!-- Selected State -->
    <item android:state_checked="true" android:drawable="@drawable/nav_item_selected"/>

    <!-- Default Background -->
    <item android:drawable="@color/white"/>
</layer-list>