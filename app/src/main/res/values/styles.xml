<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="BottomNavTextStyle" parent="TextAppearance.AppCompat.Small">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/bottom_nav_color</item>
        <item name="android:fontFamily">@font/lato_regular</item>
    </style>
    <style name="Theme.MyApp" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>
    <!-- res/values/styles.xml -->
    <!-- Calendar Header: Large, centered, bold, black -->
    <style name="CalendarHeader" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">#363636</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center</item>
        <item name="fontFamily">@font/lato_regular</item>
    </style>

    <style name="RoundedImageStyle" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item> <!-- adjust as needed -->
    </style>


    <style name="Widget.SearchView.NoUnderline" parent="Widget.AppCompat.SearchView">
        <item name="queryBackground">@android:color/transparent</item>
        <item name="submitBackground">@android:color/transparent</item>
        <item name="android:background">@android:color/transparent</item>
    </style>



    <!-- Calendar Week Day (S M T W T F S): small, gray, all caps -->
    <style name="CalendarWeekDay" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">#363636</item> <!-- Light Gray -->
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">center</item>
        <item name="fontFamily">@font/inter</item>
    </style>

    <!-- Calendar Date Numbers: medium size, clean, dark -->
    <style name="CalendarDate" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">#363636</item> <!-- Medium Dark Text -->
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">center</item>
        <item name="fontFamily">@font/inter</item>
    </style>

    <style name="doctorImgBg"><item name="cornerSize">12dp</item></style>

    <style name="CircularImageView">
        <item name="shapeAppearanceOverlay">@style/CircleShape</item>
    </style>

    <style name="CircleShape" parent="ShapeAppearance.Material3.Corner.Small">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="CustomNavItem">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="CustomNavIcon">
        <item name="android:tint">@color/greyColor</item>
    </style>

    <style name="CustomNavText">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/greyColor</item>
        <item name="fontFamily">@font/lato_regular</item>
    </style>

    <style name="CustomNavIndicator">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:background">@drawable/bottom_nav_view_bg</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="AppTheme.NoStatusBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>


</resources>